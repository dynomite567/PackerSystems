{
  "variables": {
    "cpus": "1",
    "memory": "2048",
    "disk_size": "16384",
    "build_num": "1.0",
    "vmname": "Falls"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "iso_urls": [ "http://mirror.compevo.com/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso", "http://centos.den.host-engine.com/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso", "http://mirror.hackingand.coffee/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso" ],
      "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
      "iso_checksum_type": "sha256",
      "shutdown_command": "echo 'password' | sudo /sbin/halt -h -p",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "communicator": "ssh",
      "boot_command": [
              "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-ks.cfg<enter><wait>"
      ],
      "guest_os_type": "centos-64",
      "boot_wait": "15s",
      "http_directory": "http",
      "ssh_timeout": "10000s",
      "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "disk_size": "{{user `disk_size`}}",
      "vmx_data": {
              "memsize": "{{user `memory`}}",
              "numvcpus": "{{user `cpus`}}"
      }
    },
    {
      "type": "virtualbox-iso",
      "iso_urls": [ "http://mirror.compevo.com/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso", "http://centos.den.host-engine.com/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso", "http://mirror.hackingand.coffee/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso" ],
      "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
      "iso_checksum_type": "sha256",
      "shutdown_command": "echo 'password' | sudo /sbin/halt -h -p",
      "ssh_username": "administrator",
      "ssh_password": "password",
      "communicator": "ssh",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos-ks.cfg<enter><wait>"
      ],
      "guest_os_type": "RedHat_64",
      "boot_wait": "15s",
      "http_directory": "http",
      "ssh_timeout": "10000s",
      "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
      "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": true,
      "inline": [
        "sleep 30",
        "sudo yum -y update",
        "sudo yum -y install epel-release",
        "sudo yum remove -y docker docker-client docker-client-latest docker-common docker-latest docker-latest-logrotate docker-logrotate docker-selinux docker-engine-selinux docker-engine",
        "sudo yum install -y yum-utils device-mapper-persistent-data lvm2",
        "sudo yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo",
        "sudo /bin/bash -c 'yes | yum install -y docker-ce'",
        "sudo usermod -aG docker administrator",
        "sudo systemctl start docker && sudo systemctl enable docker",
        "sudo curl -L https://github.com/docker/compose/releases/download/1.21.2/docker-compose-Linux-x86_64 -o /usr/local/bin/docker-compose",
        "sudo chmod +x /usr/local/bin/docker-compose",
        "docker-compose --version",
        "sudo reboot"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/docker/centdocker.sh"
      ]
    }
  ]
}
