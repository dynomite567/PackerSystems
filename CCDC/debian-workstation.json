{
  "variables": {
    "cpus": "1",
    "disk_size": "40000",
    "headless": "false",
    "iso_checksum": "http://ftp.riken.go.jp/Linux/debian/debian-cdimage/archive/latest-oldstable/amd64/iso-cd/SHA256SUMS",
    "iso_checksum_type": "sha256",
    "memory": "1024",
    "mirror": "http://ftp.riken.go.jp/Linux/debian/debian-cdimage/archive/latest-oldstable/amd64/iso-cd/debian-8.9.0-amd64-netinst.iso",
    "ssh_timeout": "60m",
    "build_num": "1.0",
    "vmname": "Tuna"
  },
  "builders": [{
    "type": "qemu",
    "iso_url": "{{user `mirror`}}",
    "iso_checksum_url": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
    "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "administrator",
    "ssh_password": "password",
    "shutdown_command": "sudo systemctl poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }, {
    "type": "virtualbox-iso",
    "guest_os_type": "Debian_64",
    "iso_url": "{{user `mirror`}}",
    "iso_checksum_url": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
    "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "administrator",
    "ssh_password": "password",
    "shutdown_command": "sudo systemctl poweroff",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
      ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
    ]
  }, {
    "type": "vmware-iso",
    "guest_os_type": "debian8-64",
    "iso_url": "{{user `mirror`}}",
    "iso_checksum_url": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "Builds/{{user `vmname`}}-{{user `build_num`}}",
    "vm_name": "{{user `vmname`}}-{{user `build_num`}}",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "http_directory": "http",
    "boot_wait": "5s",
    "boot_command": [
      "<esc><wait>",
      "auto ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/debian-preseed.cfg ",
      "<enter>"
    ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "administrator",
    "ssh_password": "password",
    "tools_upload_flavor": "linux",
    "shutdown_command": "sudo systemctl poweroff",
    "vmx_data": {
      "memsize": "{{user `memory`}}",
      "numvcpus": "{{user `cpus`}}"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "scripts": "scripts/debian/virtualbox.sh",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "scripts": "scripts/debian/vmware.sh",
      "only": ["vmware-iso"]
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "inline": "sudo reboot"
    },
    {
      "type": "file",
      "source": "files/pacman.conf",
      "destination": "/home/administrator/"
    },
    {
      "type": "file",
      "source": "files/debianPKGBUILD",
      "destination": "/home/administrator/"
    },
    {
      "type": "file",
      "source": "files/tuna.png",
      "destination": "/home/administrator/Pictures/"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/debian/debian-workstation.sh",
        "scripts/debian/cleanup.sh"
      ]
    }
  ]
}
